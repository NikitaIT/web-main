{
  "name": "blog",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset-add": "changeset add",
    "deploy-only": "turbo run deploy --filter=web... --concurrency 100%",
    "publish-packages": "turbo run deploy && changeset version && changeset publish",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prepare": "husky install",
    "cz": "cz",
    "browserslist-all-used-versions": "pnpm dlx browserslist",
    "browserslist-analytics": "pnpm dlx browserslist-ga",
    "d": "turbo daemon stop && turbo daemon clean && turbo daemon start"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "turbo": "latest",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/config-pnpm-scopes": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "commitizen": "^4.3.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdownlint-cli": "^0.39.0",
    "onchange": "^7.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tsconfig": "workspace:*"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20.9.0 <21.0.0",
    "vscode": "^1.22.0"
  },
  "lint-staged": {
    "src/**/*.+(js|json|ts|tsx)": [
      "eslint --cache --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
